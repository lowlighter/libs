{
  "name": "@lowlighter/xml",
  "version": "4.0.0",
  "description": "A XML parser/stringifier written in typescript and with no dependencies",
  "author": "lowlighter (Simon Lecoq)",
  "repository": "https://github.com/lowlighter/xml",
  "license": "MIT License",
  "exports": {
    ".": "./mod.ts",
    "./parse": "./parse.ts",
    "./stringify": "./stringify.ts",
    "./types": "./utils/types.ts"
  },
  "tasks": {
    "ci": "deno fmt --check && deno task test && deno task bench",
    "test": "deno fmt && deno test --coverage --doc --allow-read --allow-env --allow-run=node,bun --allow-write=utils/tests --allow-net=deno.land && deno coverage && deno lint",
    "bench": "deno bench --allow-read --allow-write=utils/tests"
  },
  "lint": {
    "rules": {
      "exclude": ["no-extra-semi"]
    },
    "exclude": [
      "utils/tests/compatibility/_example.node.mjs"
    ]
  },
  "fmt": {
    "lineWidth": 120,
    "semiColons": false,
    "exclude": [
      "utils/tests/compatibility/_example.node.mjs",
      "coverage"
    ]
  }
}
