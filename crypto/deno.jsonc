{
  "icon": "ðŸ§®",
  "name": "@libs/crypto",
  "version": "1.0.4",
  "description": "Features based upon Web Crypto APIs",
  "author": "lowlighter (Simon Lecoq)",
  "repository": "https://github.com/lowlighter/libs",
  "playground": "https://libs.lecoq.io/crypto",
  "license": "MIT License",
  "supported": [
    "deno",
    "node",
    "bun",
    "cloudflare-workers",
    "browsers"
  ],
  "exports": {
    "./encryption": "./encryption.ts",
    "./totp": "./totp.ts"
  },
  "imports": {
    "@std/encoding/base32": "jsr:@std/encoding@0.224.1/base32",
    "@libs/testing": "jsr:@libs/testing@1"
  },
  "tasks": {
    "test": "rm coverage -rf && deno test --allow-run=deno,node,bun,npx --no-prompt --coverage --trace-leaks --doc",
    "dev": "deno fmt && deno task test --filter='/^\\[deno\\]/' && deno coverage --detailed && deno lint && deno publish --dry-run --quiet",
    "coverage": "deno task test --filter='/^\\[deno\\]/' --quiet && deno coverage",
    "ci": "deno fmt --check && deno task test --filter='/^\\[node|bun \\]/' --quiet && deno coverage && deno lint",
    "ci:coverage": "deno task coverage --html && sleep 1 && rm -rf ../coverage/crypto && mv coverage/html ../coverage/crypto"
  },
  "lint": {
    "rules": {
      "include": [
        "no-throw-literal",
        "no-eval",
        "eqeqeq",
        "ban-untagged-todo"
      ]
    },
    "exclude": [
      "**/wasm_xml_parser"
    ]
  },
  "fmt": {
    "lineWidth": 280,
    "semiColons": false,
    "exclude": [
      "coverage",
      "**/coverage",
      "**/node_modules",
      "**/wasm_xml_parser"
    ]
  }
}