{
  "icon": "ðŸ§ª",
  "name": "@libs/testing",
  "version": "1.0.4",
  "description": "Testing utilities for cross-platform testing on Deno, Node.js and Bun.",
  "author": "lowlighter (Simon Lecoq)",
  "repository": "https://github.com/lowlighter/libs",
  "license": "MIT License",
  "supported": ["deno"],
  "exports": {
    ".": "./mod.ts"
  },
  "imports": {
    "@std/expect": "jsr:@std/expect@0.224.0",
    "@std/path/from-file-url": "jsr:@std/path@0.225.1/from-file-url",
    "@libs/typing": "jsr:@libs/typing@2",
    "bun:test": "./_stub.ts"
  },
  "tasks": {
    "test": "rm coverage -rf && deno test --allow-run=deno,node,bun,npx,invalid_path --no-prompt --coverage --trace-leaks --doc",
    "dev": "deno fmt && deno task test --filter='[deno]' && deno coverage --detailed && deno lint && deno publish --dry-run --quiet",
    "ci": "deno fmt --check && deno task test --quiet && deno coverage && deno lint",
    "coverage": "deno task test --filter='[deno]' --quiet && deno coverage"
  },
  "lint": {
    "rules": {
      "include": [
        "no-throw-literal",
        "no-eval",
        "eqeqeq",
        "ban-untagged-todo"
      ]
    },
    "exclude": [
      "**/wasm_xml_parser"
    ]
  },
  "fmt": {
    "lineWidth": 280,
    "semiColons": false,
    "exclude": [
      "coverage",
      "**/coverage",
      "**/node_modules",
      "**/wasm_xml_parser"
    ]
  }
}
